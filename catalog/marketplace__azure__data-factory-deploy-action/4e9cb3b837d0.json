  "definition": {
    "name": "data-factory-deploy",
    "description": "Deploy Azure Data Factory resources",
    "author": "",
    "inputs": [
      {
        "name": "resourceGroupName",
        "required": true,
        "default": null,
        "description": "Data Factory resource group name"
      },
      {
        "name": "dataFactoryName",
        "required": true,
        "default": null,
        "description": "Data factory name"
      },
      {
        "name": "armTemplateFile",
        "required": false,
        "default": "ARMTemplateForFactory.json",
        "description": "ARM template file name"
      },
      {
        "name": "armTemplateParametersFile",
        "required": false,
        "default": "ARMTemplateParametersForFactory.json",
        "description": "ARM template parameters file name"
      },
      {
        "name": "additionalParameters",
        "required": false,
        "default": "",
        "description": "Parameters which will be replaced in the ARM template"
      },
      {
        "name": "skipAzModuleInstallation",
        "required": false,
        "default": "false",
        "description": "Parameters which skip the Az module installation"
      }
    ],
    "outputs": [],
    "runs": {
      "using": "composite",
      "steps": [
        {
          "name": "Install Az PowerShell module",
          "run": "if('${{ inputs.skipAzModuleInstallation }}' -ne 'true') { Install-Module -Name Az -Scope CurrentUser -Repository PSGallery -Force }",
          "shell": "pwsh"
        },
        {
          "name": "Run Pre-deployment script",
          "run": "${{ github.action_path }}/PrePostDeploymentScript.ps1 `\n  -armTemplate \"${{ inputs.armTemplateFile }}\" `\n  -ResourceGroupName \"${{ inputs.resourceGroupName }}\" `\n  -DataFactoryName \"${{ inputs.dataFactoryName }}\" `\n  -predeployment $true `\n  -deleteDeployment $false\n",
          "shell": "pwsh"
        },
        {
          "name": "Run ARM deploy",
          "uses": "azure/arm-deploy@v1",
          "with": {
            "resourceGroupName": "${{ inputs.resourceGroupName }}",
            "template": "${{ inputs.armTemplateFile }}",
            "parameters": "${{ inputs.armTemplateParametersFile }} factoryName=${{ inputs.dataFactoryName }} ${{ inputs.additionalParameters }}"
          }
        },
        {
          "name": "Run Post-deployment script",
          "run": "${{ github.action_path }}/PrePostDeploymentScript.ps1 `\n  -armTemplate \"${{ inputs.armTemplateFile }}\" `\n  -ResourceGroupName \"${{ inputs.resourceGroupName }}\" `\n  -DataFactoryName '${{ inputs.dataFactoryName }}' `\n  -predeployment $false `\n  -deleteDeployment $true\n",
          "shell": "pwsh"
        }
      ]
    }
  },
