{
  "action_id": "marketplace/lowlighter/setup-velociraptor",
  "version_id": "ad0af8fb5766",
  "source": {
    "type": "marketplace",
    "action_yml_path": "blueprints/marketplace/lowlighter/setup-velociraptor/action.yml",
    "origin": "github.com/lowlighter/setup-velociraptor",
    "publisher": "lowlighter",
    "verified": false
  },
  "definition": {
    "name": "Setup Velociraptor",
    "description": "Install Velociraptor scripts manager",
    "author": "JurassiScripts",
    "inputs": [
      {
        "name": "checkout",
        "required": false,
        "default": true,
        "description": "Whether to checkout repository first"
      },
      {
        "name": "deno-version",
        "required": false,
        "default": "1.x",
        "description": "Deno version to use"
      },
      {
        "name": "velociraptor-version",
        "required": false,
        "default": "latest",
        "description": "Velociraptor version to use"
      },
      {
        "name": "velociraptor-alias",
        "required": false,
        "default": "vr",
        "description": "Velociraptor alias name"
      }
    ],
    "outputs": [
      {
        "name": "deno-is-canary",
        "description": "Whether installed Deno version is a canary version"
      },
      {
        "name": "deno-version",
        "description": "Deno version that was installed"
      },
      {
        "name": "velociraptor-version",
        "description": "Velociraptor version that was installed"
      }
    ],
    "runs": {
      "using": "composite",
      "steps": [
        {
          "name": "run actions/checkout@v2",
          "uses": "actions/checkout@v2",
          "if": "${{ inputs.checkout }}"
        },
        {
          "name": "run denoland/setup-deno@v1",
          "id": "deno",
          "uses": "denoland/setup-deno@v1",
          "if": "${{ inputs.deno-version }}",
          "with": {
            "deno-version": "${{ inputs.deno-version }}"
          }
        },
        {
          "name": "setup velociraptor",
          "shell": "bash",
          "run": "case \"${{ inputs.velociraptor-version }}\" in\n  \"latest\") ;; \"\") ;;\n  *) VERSION=@${{ inputs.velociraptor-version }} ;;\nesac\ndeno install --allow-all --name ${{ inputs.velociraptor-alias }} https://deno.land/x/velociraptor$VERSION/cli.ts\necho \"/home/runner/.deno/bin\" >> $GITHUB_PATH\n"
        },
        {
          "name": "add velociraptor to path (macos)",
          "shell": "bash",
          "if": "${{ contains(runner.os, 'macos') }}",
          "run": "echo \"/Users/runner/.deno/bin\" >> $GITHUB_PATH\n"
        },
        {
          "name": "add velociraptor to path (windows)",
          "shell": "powershell",
          "if": "${{ contains(runner.os, 'windows') }}",
          "run": "echo \"C:\\Users\\runneradmin\\.deno\\bin\" | Out-File -FilePath $env:GITHUB_PATH -Encoding utf8 -Append\n"
        },
        {
          "name": "compute output velociraptor-version",
          "id": "velociraptor",
          "shell": "bash",
          "run": "echo \"::set-output name=velociraptor-version::$(${{ inputs.velociraptor-alias }} --version)\""
        }
      ]
    }
  },
