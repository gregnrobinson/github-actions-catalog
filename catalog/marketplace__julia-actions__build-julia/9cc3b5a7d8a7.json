  "definition": {
    "name": "Build Julia",
    "description": "Build Julia from source for a given commit.",
    "author": "Sascha Mann",
    "inputs": [
      {
        "name": "ref",
        "required": false,
        "default": "master",
        "description": "Value passed to git checkout."
      },
      {
        "name": "source-repo",
        "required": false,
        "default": "https://github.com/JuliaLang/julia.git",
        "description": "Value passed to git clone."
      },
      {
        "name": "target-dir",
        "required": false,
        "default": "$HOME/julia",
        "description": "Directory that Julia will be installed in"
      }
    ],
    "outputs": [],
    "runs": {
      "using": "composite",
      "steps": [
        {
          "name": "Clone Julia",
          "run": "git clone ${{ inputs.source-repo }} \"${{ inputs.target-dir }}\"",
          "shell": "bash"
        },
        {
          "name": "Checkout ref",
          "run": "cd \"${{ inputs.target-dir }}\"\ngit checkout ${{ inputs.ref }}\n",
          "shell": "bash"
        },
        {
          "name": "Build Julia",
          "run": "cd \"${{ inputs.target-dir }}\"\n\n# GHA runners don't all run on the same hardware\n# Not specifying a CPU target can lead to issues when caching the build output\necho \"JULIA_CPU_TARGET=x86_64\" >> Make.user\n\nmake -j 2\n",
          "shell": "bash"
        },
        {
          "name": "Print Version",
          "run": "cd \"${{ inputs.target-dir }}\"\n./julia --version\n",
          "shell": "bash"
        }
      ]
    }
  },
