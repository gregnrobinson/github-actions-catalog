{
  "action_id": "marketplace/mislav/ansible-lint",
  "version_id": "e63ed5556a54",
  "source": {
    "type": "marketplace",
    "action_yml_path": "blueprints/marketplace/mislav/ansible-lint/action.yml",
    "origin": "github.com/mislav/ansible-lint",
    "publisher": "mislav",
    "verified": false
  },
  "definition": {
    "name": "run-ansible-lint",
    "description": "Run Ansible Lint",
    "author": "Ansible by Red Hat <info@ansible.com>",
    "inputs": [
      {
        "name": "args",
        "required": false,
        "default": "",
        "description": "Arguments to be passed to ansible-lint command."
      },
      {
        "name": "setup_python",
        "required": false,
        "default": true,
        "description": "If false, this action will not setup python and will instead rely on the already installed python."
      },
      {
        "name": "working_directory",
        "required": false,
        "default": "",
        "description": "The directory where to run ansible-lint from. Default is `github.workspace`."
      }
    ],
    "outputs": [],
    "runs": {
      "using": "composite",
      "steps": [
        {
          "name": "Generate .git/ansible-lint-requirements.txt",
          "shell": "bash",
          "run": "wget --output-document=.git/ansible-lint-requirements.txt https://raw.githubusercontent.com/ansible/ansible-lint/${{ github.action_ref || 'main' }}/.config/requirements-lock.txt\n"
        },
        {
          "name": "Set up Python",
          "if": "inputs.setup_python == 'true'",
          "uses": "actions/setup-python@v4",
          "with": {
            "cache": "pip",
            "cache-dependency-path": ".git/ansible-lint-requirements.txt",
            "python-version": "3.11"
          }
        },
        {
          "name": "Install ansible-lint",
          "shell": "bash",
          "run": "cd $GITHUB_ACTION_PATH\npip install \"ansible-lint[lock] @ git+https://github.com/ansible/ansible-lint@${{ github.action_ref || 'main' }}\"\nansible-lint --version\n"
        },
        {
          "name": "Process inputs",
          "id": "inputs",
          "shell": "bash",
          "run": "if [[ -n \"${{ inputs.working_directory }}\" ]]; then\n  echo \"working_directory=${{ inputs.working_directory }}\" >> $GITHUB_OUTPUT\nelse\n  echo \"working_directory=${{ github.workspace }}\" >> $GITHUB_OUTPUT\nfi\n"
        },
        {
          "name": "Run ansible-lint",
          "shell": "bash",
          "working-directory": "${{ steps.inputs.outputs.working_directory }}",
          "run": "ansible-lint ${{ inputs.args }}"
        }
      ]
    }
  },
