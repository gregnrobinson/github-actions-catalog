  "definition": {
    "name": "Install Julia from URL",
    "description": "Install Julia from a given URL.",
    "author": "Sascha Mann",
    "inputs": [
      {
        "name": "url",
        "required": true,
        "default": "",
        "description": "URL pointing at the archive."
      },
      {
        "name": "target-dir",
        "required": false,
        "default": "$HOME/julia",
        "description": "Directory that Julia will be installed in"
      }
    ],
    "outputs": [],
    "runs": {
      "using": "composite",
      "steps": [
        {
          "name": "Download and extract Julia",
          "run": "mkdir -p \"${{ inputs.target-dir }}\"\ncurl -LsS \"${{ inputs.url }}\" | tar -xz --strip-components=1 -C \"${{ inputs.target-dir }}\"\n",
          "shell": "bash"
        },
        {
          "name": "Add to PATH",
          "run": "echo \"${{ inputs.target-dir }}/bin\" >> \"$GITHUB_PATH\"",
          "shell": "bash"
        },
        {
          "name": "Print Version",
          "run": "julia --compile=min -O0 -e \"using InteractiveUtils; versioninfo()\"",
          "shell": "bash"
        }
      ]
    }
  },
