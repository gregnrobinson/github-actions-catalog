{
  "action_id": "marketplace/appleboy/database-backup-action",
  "version": "106c5dd0e294",
  "definition": {
    "name": "Online Backup Database",
    "description": "Docker image to periodically backup a your database to AWS S3",
    "author": "Bo-Yi Wu",
    "inputs": [
      {
        "name": "database_driver",
        "description": "support `postgres`, `mysql` or `mongo`. default is `postgres`",
        "required": false,
        "default": "postgres"
      },
      {
        "name": "database_username",
        "description": "database username",
        "required": false,
        "default": null
      },
      {
        "name": "database_password",
        "description": "database password",
        "required": false,
        "default": null
      },
      {
        "name": "database_name",
        "description": "database name",
        "required": false,
        "default": null
      },
      {
        "name": "database_host",
        "description": "database host",
        "required": false,
        "default": null
      },
      {
        "name": "database_opts",
        "description": "see the `pg_dump`, `mysqldump` or `mongodump` command",
        "required": false,
        "default": null
      },
      {
        "name": "storage_driver",
        "description": "support `s3` or `disk`. default is `s3`",
        "required": false,
        "default": "s3"
      },
      {
        "name": "access_key_id",
        "description": "minio or aws s3 access key id",
        "required": false,
        "default": null
      },
      {
        "name": "secret_access_key",
        "description": "minio or aws s3 secret access key",
        "required": false,
        "default": null
      },
      {
        "name": "storage_endpoint",
        "description": "s3 endpoint. default is `s3.amazonaws.com`",
        "required": false,
        "default": "s3.amazonaws.com"
      },
      {
        "name": "storage_bucket",
        "description": "s3 bucket name",
        "required": false,
        "default": null
      },
      {
        "name": "storage_region",
        "description": "s3 region. default is `ap-northeast-1`",
        "required": false,
        "default": "ap-northeast-1"
      },
      {
        "name": "storage_path",
        "description": "backup folder path in bucket. default is `backup` and all dump file will save in `bucket/backup` directory",
        "required": false,
        "default": "backup"
      },
      {
        "name": "storage_ssl",
        "description": "default is `false`",
        "required": false,
        "default": "false"
      },
      {
        "name": "storage_insecure_skip_verify",
        "description": "default is `false`",
        "required": false,
        "default": "false"
      }
    ],
    "outputs": []
  },
  "source": {
    "type": "marketplace",
    "publisher": "appleboy",
    "verified": false,
    "origin": "github.com/appleboy/database-backup-action"
  },
